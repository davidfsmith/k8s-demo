{
  "title": "Ingress NGINX \u2014 Minimal (Process Metrics)",
  "timezone": "browser",
  "schemaVersion": 36,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests/sec (overall)",
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_requests_total[1m])",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Requests/sec over time",
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_requests_total[1m])",
          "legendFormat": "rps",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 16,
        "x": 8,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Active connections",
      "targets": [
        {
          "expr": "nginx_ingress_controller_nginx_process_connections{state=\"active\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 6
      }
    },
    {
      "type": "timeseries",
      "title": "Connections by state",
      "targets": [
        {
          "expr": "nginx_ingress_controller_nginx_process_connections",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 16,
        "x": 8,
        "y": 9
      }
    },
    {
      "type": "timeseries",
      "title": "Connections/sec (accepted vs handled)",
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_connections_total[1m])",
          "legendFormat": "{{state}}/s",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 18
      }
    }
  ]
}